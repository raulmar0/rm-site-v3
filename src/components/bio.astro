---
const { description, location, link, experience } = Astro.props;

--- 

<div class="bio--grid-container" *ngIf="$bio | async as bio">
  <div class="vertical-center bio--description">
    <p>{ description }</p>
  </div>
  <div class="vertical-center bio--location">
    <span class="bio-span">📍 { location }</span>
  </div>
  <div class="vertical-center bio--url">
    <span class="bio-span">🔗 <a href={link}>{ link }</a></span>
  </div>
  <div class="vertical-center bio--experience">
    <span class="bio-span">🧑‍💻 { experience }</span>
  </div>
</div>

<style>
  .bio--grid-container {
  display: grid;
  max-width: 100%;
  margin: 0 20px;
  margin-bottom: 20px;
  height: 110px;
  grid-template-columns: auto 1fr;
  grid-template-rows: 60px 1fr 1fr;
  font-family: 'Inter', sans-serif;
  letter-spacing: var(--letter-spacing-xs);
  font-size: 1.4rem;
}

.vertical-center {
  display: flex;
  align-items: center;
}

.bio--description {
 /* background-color: red; */
 color: var(--primary-color);
 grid-row: 1 / 2;
 grid-column: 1 / 3;
}

.bio--description > p {
  font-weight: var(--font-weight-normal);
  color: var(--accent-color);
}

.bio-span, a {
  font-weight: var(--font-weight-normal);
  color: var(--secondary-color);
  /* color: #818181; */
}

.bio--location {
  padding-right: 15px;
}

.bio--url {
}

.bio--experience {
  grid-row: 3 / 4;
  grid-column: 1 / 3;
}

</style>