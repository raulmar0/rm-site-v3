---
import Image from "astro/components/Image.astro"

const { cover, profilePic, username, title, collectionId, userId } = Astro.props
const fullUrl = `https://rmperso-pb.fly.dev/api/files/${collectionId}/${userId}/`
---

<div class="header--grid-container">
  <div class="header--img">
    <img src=`${fullUrl}${cover}` alt="">
  </div>
  <div class="header--profile-img">
    <img src=`${fullUrl}${profilePic}` alt="">
  </div>
  <div class="header--id-text">
    <span class="username">&#64;{ username }</span>
    <span class="user-title">{ title }</span>
  </div>
</div>

<style>
  @media (min-width: 480px) {
  .header--img > rm-image img {
    border-radius: 5px;
  }
}

.header--grid-container {
  display: grid;
  width: 100%;
  height: 220px;
  grid-template-columns: 180px 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  margin-bottom: 10px;
}

.header--img {
  width: 100%;
  height: 150px;
  grid-column: 1 / 3;
  grid-row: 1 / 3;
}

.header--img > img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.header--profile-img {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  grid-row: 2 / 4;
  grid-column: 1 / 2;
}

.header--profile-img > img {
  width: 140px;
  height: 140px;
  border-radius: 50%;
  border: 3px solid var(--main-bg-color);
}

.header--id-text {
  width: 100%;
  height: 100%;
  display: flex;
  gap: 0.2rem;
  flex-direction: column;
  justify-content: center;
}

.header--id-text > span {
  font-family: 'Inter', sans-serif;
  letter-spacing: var(--letter-spacing-xs);
}

.header--id-text > .username {
  font-size: 2rem;
  font-weight: var(--font-weight-bold);
  color: var(--accent-color);
}

.header--id-text > .user-title {
  font-size: 1.4rem;
  font-weight: var(--font-weight-normal);
  color: var(--secondary-color);
  /* color: #666666; */
}

</style>